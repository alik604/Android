<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tom10.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/darkGray"
            android:textSize="40dp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:id="@+id/buttonCLEAR"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@color/darkGray2"
                android:text="C" />

            <Button
                android:id="@+id/buttonINVERT"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@color/darkGray2"
                android:text="+/-" />

            <Button
                android:id="@+id/buttonBACK"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@color/darkGray2"
                android:text="←" />

            <Button
                android:id="@+id/buttonDIV"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="3"
                android:layout_row="0"
                android:background="@color/orange"
                android:text="/" />
            <!-- 2nd row -->
            <Button
                android:id="@+id/button7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@color/stockButtonColor"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@color/stockButtonColor"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@color/stockButtonColor"
                android:text="9" />

            <Button
                android:id="@+id/buttonMULTI"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="3"
                android:layout_row="1"
                android:background="@color/orange"
                android:text="X" />
            <!-- 3rd row -->
            <Button
                android:id="@+id/button4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@color/stockButtonColor"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@color/stockButtonColor"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@color/stockButtonColor"
                android:text="6" />

            <Button
                android:id="@+id/buttonMIN"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="3"
                android:layout_row="2"
                android:background="@color/orange"
                android:text="-" />
            <!-- 4th row -->
            <Button
                android:id="@+id/button1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@color/stockButtonColor"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="1"
                android:layout_row="3"
                android:background="@color/stockButtonColor"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@color/stockButtonColor"
                android:text="3" />

            <Button
                android:id="@+id/buttonPLUS"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="3"
                android:layout_row="3"
                android:background="@color/orange"
                android:text="+" />


            <Button
                android:id="@+id/button0"
                android:layout_width="170dp"
                android:layout_height="85dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:background="@color/stockButtonColor"
                android:gravity="left|center_vertical"
                android:text="           0" />


            <Button
                android:id="@+id/buttonPERIOD"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="2"
                android:layout_row="4"
                android:background="@color/stockButtonColor"
                android:gravity="center_horizontal|center_vertical"
                android:text="." />
            <!-- "bottom" to fix . -->
            <Button
                android:id="@+id/buttonEQUALS"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_column="3"
                android:layout_row="4"
                android:background="@color/orange"
                android:text="=" />

        </GridLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
